<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラー
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model:@book do |f| %>

 <h4>本のタイトル</h4>
 <%= f.text_field :title %>
 
 <h4>感想</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Update Book' %>
 
<% end %>

<!--詳細-->
<%= link_to "Show",book_path %>
<!--戻る-->
<%= link_to "back",books_path %>