<!DOCTYPE html>
<html>
  <head>
    <title>課題2「Bookers」</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <h1>Books</h1>

  <p>本のタイトル</p>
  <% @Books.each do |book| %>
  <span>
    <%= book.title %>
  </span>
  <% end %>
 
  <p>感想</p>
  <% @Books.each do |book| %>
  <span>
    <%= book.body %>
  </span>
  <% end %>
  
  <P>
  <% @Books.each do |book| %>
  <%= link_to "Show",book_path(book.id) %>
  <% end %>
  </P>

  <h2>New book</h2>
  <%= form_with model:@book do |f| %>
    <h4>本のタイトル</h4>
    <%= f.text_field :title %>

    <h4>感想</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
