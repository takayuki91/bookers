  <h1>Books</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error(s) prohibited this book from being saved
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <table>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan = "3" ></th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit",edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <%= form_with model:@book do |f| %>
    <h4>本のタイトル</h4>
    <%= f.text_field :title %>

    <h4>感想</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
