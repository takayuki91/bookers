  <h1>Books</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラー
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <p>本のタイトル</p>
  <p>感想</p>
  
  <% @books.each do |book| %>
  <span>
    <%= book.title %>
  </span>

  <span>
    <%= book.body %>
  </span>

  <P>
  <%= link_to "Show",book_path(book.id) %>
  </P>

  <p>
  <%= link_to "Edit",edit_book_path(book.id) %>
  </p>

  <p>
  <!--削除-->
  </p>
  
  <% end %>

  <h2>New book</h2>
  <%= form_with model:@book do |f| %>
    <h4>本のタイトル</h4>
    <%= f.text_field :title %>

    <h4>感想</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
